@model WebApplicationCore.Models.SolutionModels

@{
    ViewData["Title"] = "Solve Assignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var assignment = ViewBag.Assignment;
}

@section Stylesheets {
    <link rel="stylesheet" href="/css/display-assignment.css" />
}

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 screen-1300-invisible">
            </div>
            <div class="col-md-8 screen-1300-full">
                <form class="create-assignment-form" asp-controller="Assignment" asp-action="SolvingAssignment" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-2 screen-1300-invisible">
                        </div>
                        <div class="col-md-8 screen-1300-full">
                            <div class="boxed-row">
                                <div class="row create-assignment-title-block">
                                    <div class="col-md-9">
                                        <h3 class="create-assignment-page-title">
                                            Create Assignment
                                        </h3>
                                        <span class="@ViewBag.ResponseStyleClass">@ViewBag.Message</span>
                                    </div>
                                    <div class="col-md-3 d-flex align-items-center justify-content-end">
                                        <button type="submit" class="btn-publish-assignment">
                                            Post The Solution
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <input asp-for="AssignmentId" type="hidden" value="@assignment.AssignmentId">

                            <div class="row assignment-description-detail-container">
                                <div class="col-md-7 height-max">
                                    <div class="assignment-description">
                                        <div class="form-group">
                                            <label for="Anonymous">
                                                Make Anonymous
                                            </label>
                                            <br />
                                            <input asp-for="Anonymous" type="checkbox" class="checkbox-make-anonymous" value="true" checked />
                                        </div>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                        <textarea asp-for="Description" placeholder="Write the description of your assignment here..." class="textarea-assignment-description"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                @await Html.PartialAsync("~/Views/Shared/AssignmentPartial.cshtml")
            </div>
            <div class="col-md-2 screen-1300-invisible">
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
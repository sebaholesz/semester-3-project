@model ModelLayer.Assignment

@{
    ViewData["Title"] = "Assignments";
    Layout = "~/Views/Shared/_LayoutWithUserSidebar.cshtml";
    List<Assignment> assignments = ViewBag.Assignments;
}

@section Stylesheets {
    <link href="~/css/display-assignment.css" rel="stylesheet" />
}

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 screen-1300-full">
                <div class="card-columns">
                    @foreach (var assignment in assignments)
                    {
                        @await Html.PartialAsync("~/Views/Shared/AssignmentCard.cshtml", assignment)
                    }

                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
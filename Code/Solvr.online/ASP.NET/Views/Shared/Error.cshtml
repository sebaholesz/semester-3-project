@model ModelLayer.ErrorViewModel
@{
    ViewData["Title"] = "Error - " + ViewBag.ErrorMessage ;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 screen-1300-invisible">
            </div>
            <div class="col-md-8 screen-1300-full">
                <div class="boxed-row h-100 w-100">
                    <div class="row">
                        <h2 class="text-center">Ups... something went wrong</h2>
                    </div>
                    <div class="row">
                        <img class="h-25" src="~/assets/icons/error.svg" />
                    </div>
                    <div class="row">
                        <h6 class="text-center w-100">@ViewBag.ErrorMessage</h6>
                        <a href="/">Go back to homepage</a>
                    </div>
                 </div>
            </div>
            <div class="col-md-2 screen-1300-invisible">
            </div>
        </div>
    </div>
</main>
@model ModelLayer.Assignment

@*@{
    var assignment = ViewBag;
}*@

<a href="/assignment/display-assignment/@Model.AssignmentId" class="assignment-card">
    <div class="card shadow border-0">
        <h5 class="card-header header text-white border-0 p-2">
            @*@assignment.Title*@
            @Model.Title
        </h5>
        <div class="card-body d-inline-flex w-100 assignment-card">
            <div class="col-md-6 card-text">
                <div class="card-academicLevel">
                    <p class="card-details text-center">@*@assignment.AcademicLevel*@ @Model.AcademicLevel</p>
                </div>
                <div class="card-subject">
                    <p class="card-details text-center">@*@assignment.Subject*@ @Model.Subject</p>
                </div>

            </div>
            <div class="col-md-6 card-text">
                <p class="card-details">@*@assignment.Deadline*@ @Model.Deadline</p>
                <p class="card-details">@*@assignment.Price*@ @Model.Price Credits</p>
                <p class="card-details">5 Answers</p>
            </div>
        </div>
        <div class="card-footer text-muted bg-white text-center">
            Postdate
        </div>
    </div>
</a>
